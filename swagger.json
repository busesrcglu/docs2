    post:
      summary: Create Yield Curve Calculation
      security:
      - BearerAuth:
        - read:client
      tags:
      - Yield Curve Calculation
      requestBody:
        description: Client object
        required: true
        content:
          application/json:
            schema:
              required:
              - valuationDate
              - endOfMonth
              - yieldCurve
              - yieldData
